<div class="loginPage">
  <form class="login form">
    <header class="form-header">
      <h1>Login</h1>
    </header>
    <body>
      <div class="form-row">
        <label for="login-username">Username</label>
        <Input id="login-username" type="text" @value={{identification}} />
      </div>
      <div class="form-row">
        <label for="login-password">Password</label>
        <Input id="login-password" type="password" @value={{password}} />
      </div>
    </body>
    <footer class="form-footer">
      <button {{action 'login'}}> Log in </button>
      <button {{action 'forgotPassword'}}> Forgot Password </button>
    </footer>
  </form>
</div>

