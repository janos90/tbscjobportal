<header>
  <h1>{{@model.name}}</h1>
</header>
<div class="form-wrapper">

  <header class="checkboxContainerheader">
    <h3>basic info</h3>
  </header>
    <div class="checkboxContainer">
      <label >Title <Input @type='text' @value={{title}} /> </label> <br />
      <label >Owner <Input @type='text' @value={{owner}} /> </label> <br />
      <label >Suburb <Input @type='text' @value={{suburb}} /> </label> <br />
      <label >City <Input @type='text' @value={{city}} /> </label> <br />
      <label >Address <Input @type='text' @value={{address}} /> </label> <br />
      <label >Number of bedrooms <Input @type='text' @value={{bedrooms}} /> </label> <br />
      <label >Description <Input @type='text' @value={{description}} /> </label> <br />
      <label >Category <Input @type='text' @value={{category}} /> </label> <br />
    </div>


  {{#each @model.sections as |section|}}
    {{#if section.title}}
      <h1>{{section.title}}</h1>
    {{/if}}
    <div class='form-pair'>
      {{#each section.sections as |subSection|}}
      <div class={{if (gt section.sections.length 1) "checkboxContainer" "fullWidthContainer"}}>
        {{#if subSection.title}}
        <header class="checkboxContainerheader">
          <h3>{{subSection.title}}</h3>
        </header>
        {{/if}}
        <table>
        {{#each subSection.elements as |element|}}
          {{#if element.image}}
            <img src="{{element.image}}" style="background-color: {{element.background}}; padding: 15px;"/>
          {{/if}}
          {{#if (eq element.input "text")}}
            <tr>
              <td>
                <label for="{{element.name}}">{{element.text}}: </label>
              </td>
              <td>
                <Input
                  @type="text"
                  @name={{element.name}}
                  @id={{element.name}}
                />
              </td>
            </tr>
          {{/if}}
          {{#if (eq element.input "textArea")}}
            <tr>
              <td>
                <label for="{{element.name}}">{{element.text}}: </label>
              </td>
              <td>
                <textarea type="text" name="{{element.name}}" id="{{element.name}}" class="textbox form-address" ></textarea>
              </td>
            </tr>
          {{/if}}
          {{#if (eq element.input "checkbox")}}
            <tr>
              <td>
                <Input type="checkbox" name="{{element.name}}" id="{{element.name}}" />
              </td>
              <td>
                <label for="{{element.name}}">{{element.text}}: </label>
              </td>
            </tr>
          {{/if}}
          {{#if (eq element.input "radio")}}
            <tr>
              <td>
                <Input type="radio" name="{{element.radio}}" id="{{element.name}}" />
              </td>
              <td>
                <label for="{{element.name}}">{{element.text}}: </label>
              </td>
            </tr>
          {{/if}}
        {{/each}}
      </table>
      </div>

      {{/each}}
    </div>
  {{/each}}
  <div class="upload-section">
    <input type="file" name="name" multiple><br><br>
  </div>

</div>

<button {{action "saveJob"}}>Submit</button>
